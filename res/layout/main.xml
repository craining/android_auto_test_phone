<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <TableLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/toppad_bg"
        android:orientation="vertical"
        android:paddingTop="10dip"
        android:stretchColumns="0,1" >

        <TableRow>

            <Button
                android:id="@+id/btn_auto_test"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:text="@string/btn_autotest" />

            <Button
                android:id="@+id/btn_auto_test_clearchecked"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dip"
                android:text="@string/autotest_clear_selected" />
        </TableRow>

        <TextView
            android:id="@+id/hello"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="@string/text_mian_tip"
            android:textColor="@color/color_black" />
    </TableLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:stretchColumns="0" >

            <TableRow
                android:layout_marginTop="10dip"
                android:paddingTop="5dip" >

                <Button
                    android:id="@+id/btn_wifi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_wifi" />

                <CheckBox
                    android:id="@+id/check_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_bluetooth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_bluetooth" />

                <CheckBox
                    android:id="@+id/check_bluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_gps"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_gps" />

                <CheckBox
                    android:id="@+id/check_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_airplane"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_airplane" />

                <CheckBox
                    android:id="@+id/check_airplane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_screen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_screen" />

                <CheckBox
                    android:id="@+id/check_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_sms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_sms" />

                <CheckBox
                    android:id="@+id/check_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_syssleep"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_syssleep" />

                <CheckBox
                    android:id="@+id/check_syssleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_audio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_audio" />

                <CheckBox
                    android:id="@+id/check_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>

            <TableRow android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_reboot"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_reboot" />

                <CheckBox
                    android:id="@+id/check_reboot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>

<!--             
            <TableRow
                android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/btn_wipedatatest" />

                <CheckBox
                    android:id="@+id/check_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip" />
            </TableRow>
-->             
            <TableRow
                android:layout_marginBottom="30dip"
                android:layout_marginTop="15dip" >

                <Button
                    android:id="@+id/btn_receivecall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:text="@string/test_phone_call" />

                <CheckBox
                    android:id="@+id/check_receivecall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:visibility="gone" />
            </TableRow>
            
        </TableLayout>
    </ScrollView>

</RelativeLayout>